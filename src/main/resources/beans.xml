<?xml version="1.0" encoding="UTF-8"?>

<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans
    http://www.springframework.org/schema/beans/spring-beans-3.0.xsd">

    <bean id="applicationcontextawaredemo" class="com.stackroute.awareinterface.ApplicationContextAwareDemo"></bean>
    <bean id="beanfactoryawaredemo" class="com.stackroute.awareinterface.BeanFactoryAwareDemo"></bean>
    <bean id="beannameawaredemo" class="com.stackroute.awareinterface.BeanNameAwareDemo"></bean>
    <bean id="resourceloaderawaredemo" class="com.stackroute.awareinterface.ResourceLoaderAwareDemo"></bean>
    <bean id="beanpostprocessordemobean" class="com.stackroute.demo.BeanPostProcessorDemoBean" ></bean>
    <bean id="beanlifecycledemobean" class="com.stackroute.demo.BeanLifeCycleDemoBean" init-method="customInit" destroy-method="customDestroy"></bean>
    <bean id="movie" class="com.stackroute.domain.Movie">

        <constructor-arg name="movieId" value="25"></constructor-arg>
        <constructor-arg name="movieName" value="Pokiri"></constructor-arg>
        <constructor-arg name="actor" ref="actor"></constructor-arg>

    </bean>

    <bean id="actor" class="com.stackroute.domain.Actor">

        <constructor-arg name="name" value="Mahesh"></constructor-arg>
        <constructor-arg name="gender" value="Male"></constructor-arg>
        <constructor-arg name="age" value="38"></constructor-arg>

    </bean>

</beans>